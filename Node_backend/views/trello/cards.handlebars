{{!-- views/trello/cards.handlebars --}}
{{#> main title="Trello Cards"}}
<div class="container mt-4">
  <h2>
    <i class="fas fa-tasks me-2"></i>Cards in {{list.name}}
  </h2>

  {{#if cards.length}}
  <div class="row">
    {{#each cards}}
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.desc}}</p>

          {{!-- 🗓️ Hiển thị Deadline nếu có --}}
          {{#if this.due}}
          <p class="text-danger">
            <strong>🗓️ Deadline:</strong> {{formatDate this.due}}
          </p>
          {{/if}}

          <p>
            <small>Created: {{formatDate this.dateLastActivity}}</small>
          </p>
          <span class="badge bg-info">{{this.idList}}</span>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div class="text-center py-5">
    <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
    <h4>No Cards Found</h4>
    <p class="text-muted">This list has no cards yet.</p>
  </div>
  {{/if}}
</div>
{{/main}}
