{{!-- views/trello/lists.handlebars --}}
{{#> main title="Trello Lists"}}
<div class="container mt-4">
  <h2>
    <i class="fas fa-stream me-2"></i>Lists in {{board.name}}
  </h2>


  {{#if lists.length}}
  <div class="row">
    {{#each lists}}
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">
            <small>Created: {{formatDate this.dateLastActivity}}</small>
          </p>
          <a href="/trello/lists/{{this.id}}/cards" class="btn btn-primary">
            View Details
          </a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div class="text-center py-5">
    <i class="fas fa-list fa-3x text-muted mb-3"></i>
    <h4>No Lists Found</h4>
    <p class="text-muted">This board has no lists yet.</p>
  </div>
  {{/if}}
</div>
{{/main}}
