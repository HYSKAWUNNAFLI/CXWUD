<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-4">Meeting Minutes Auto Generator</h1>
      
      {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
      {{/if}}
      
      {{#if user}}
        <div class="card mb-4">
          <div class="card-header">
            <h2>Welcome, {{user.name}}!</h2>
          </div>
          <div class="card-body">
            <p>You are logged in as a {{user.role}}.</p>
            <div class="row">
              <div class="col-md-6">
                <h3>Recent Meetings</h3>
                {{#if recentMeetings.length}}
                  <ul class="list-group">
                    {{#each recentMeetings}}
                      <li class="list-group-item">
                        <a href="/meetings/{{this.id}}">{{this.title}}</a>
                        <span class="badge bg-primary float-end">{{this.status}}</span>
                      </li>
                    {{/each}}
                  </ul>
                {{else}}
                  <p>No recent meetings.</p>
                {{/if}}
                <a href="/meetings" class="btn btn-primary mt-2">View All Meetings</a>
              </div>
              <div class="col-md-6">
                <h3>Recent Tasks</h3>
                {{#if recentTasks.length}}
                  <ul class="list-group">
                    {{#each recentTasks}}
                      <li class="list-group-item">
                        <a href="/tasks/{{this.id}}">{{this.title}}</a>
                        <span class="badge bg-{{#if (eq this.status 'COMPLETED')}}success{{else if (eq this.status 'IN_PROGRESS')}}warning{{else}}secondary{{/if}} float-end">{{this.status}}</span>
                      </li>
                    {{/each}}
                  </ul>
                {{else}}
                  <p>No recent tasks.</p>
                {{/if}}
                <a href="/tasks" class="btn btn-primary mt-2">View All Tasks</a>
              </div>
            </div>
          </div>
        </div>
      {{else}}
        <div class="card mb-4">
          <div class="card-header">
            <h2>Welcome to Meeting Minutes Auto Generator</h2>
          </div>
          <div class="card-body">
            <p>This application helps you extract tasks from meeting minutes using NLP.</p>
            <div class="row mt-4">
              <div class="col-md-6">
                <div class="card">
                  <div class="card-body">
                    <h3>Login</h3>
                    <p>Already have an account? Login to access your meetings and tasks.</p>
                    <a href="/auth/login" class="btn btn-primary">Login</a>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card">
                  <div class="card-body">
                    <h3>Register</h3>
                    <p>Don't have an account? Register to get started.</p>
                    <a href="/auth/register" class="btn btn-success">Register</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div> 