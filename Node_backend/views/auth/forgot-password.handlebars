<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <img src="/images/logo.png" alt="Logo" class="auth-logo">
            <h1 class="auth-title">Reset Password</h1>
            <p class="auth-subtitle">Enter your email to receive reset instructions</p>
        </div>

        <form id="forgotPasswordForm" class="auth-form needs-validation" novalidate>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
                <div class="invalid-feedback">
                    Please enter a valid email address
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Send Reset Link</button>
        </form>

        <div class="auth-links">
            <p>Remember your password? <a href="/auth/login">Login</a></p>
        </div>
    </div>
</div> 